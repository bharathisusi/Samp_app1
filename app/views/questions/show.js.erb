$('.fa-spin').removeClass('hide');
<% if @commentable.errors.size != 0 %>
  toastr.error("<%= all_views_side_error_messages!(@commentable)%>");
<% else %>
  $('.ques-cmt').append("<%= j render partial: '/comments/append_question_comment_vote', locals: {comment: @commentable, question: @question} %>");
  toastr.success('<%= t(:question_comment_create)%>');
<% end %>
$('.fa-spin').addClass('hide');
$('.remove_new_comment').remove();
$('.hide-comment-button').removeClass("hide");

